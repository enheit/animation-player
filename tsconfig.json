{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "target": "es5",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}
